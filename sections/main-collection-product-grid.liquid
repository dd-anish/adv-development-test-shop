{{ 'template-collection.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

{% if section.blocks %}
  {{ 'component-product-variant-picker.css' | asset_url | stylesheet_tag }}
  {{ 'component-swatch.css' | asset_url | stylesheet_tag }}
  {{ 'component-swatch-input.css' | asset_url | stylesheet_tag }}
{% endif %}

{% if section.settings.image_shape == 'blob' %}
  {{ 'mask-blobs.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- unless section.settings.quick_add == 'none' -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
{%- endunless -%}

<script src="{{ 'main-search.js' | asset_url }}" defer="defer"></script>

{%- liquid
  assign sort_by = search.sort_by | default: search.default_sort_by
  assign terms = search.terms | escape
  assign search_url = '?q=' | append: terms | append: '&options%5Bprefix%5D=last&sort_by=' | append: sort_by
-%}

{%- if section.settings.quick_add == 'standard' -%}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- if section.settings.quick_add == 'bulk' -%}
  <script src="{{ 'quick-add-bulk.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'price-per-item.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quick-order-list.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{% if section.settings.show_search_bar_in_collection_page %}
  {{ 'component-custom-search-bar.css' |  asset_url |  stylesheet_tag }}
{% endif %}

{%- style -%}

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Custom CSS for Swatch */

  .swatch.swatch--no-variant {
    background-color: {{ settings.no_product_variant_background }};
    opacity: {{ settings.no_product_variant_bg_opacity | plus: 0.0 | divided_by: 100 }};
    border: {{ settings.no_product_variant_border_width }}px {{ settings.no_product_variant_border_style }} {{ settings.no_product_variant_border_color }};
  }

  /* Custon CSS for Search Bar and Filter */

  /* No need for the below, as border radius can be changed from theme editor --inputs-radius */
  /* .custom-search-bar:after{
    border: 1px solid black;

    border-radius: var(--inputs-radius);
  } */

  @media screen and (max-width: 750px) {

    .collection-search-bar-and-filter{
      display: flex;
      justify-content: space-between;
      align-items: center;  
      gap: 1rem;
    }

    .facets-wrapper .facets-container{
      padding-top: 0;
      column-gap:1rem;
    }

    .mobile-facets__wrapper .mobile-facets__open .svg-wrapper{
      width: 2.5rem;
      height: 2.5rem;
    }

  }

  /* Redering Padding for each blocks */
    {%- for block in section.blocks -%}

      .block-{{ block.id }} {

          padding-top: {{ block.settings.padding_top | times: 0.75 | round: 0 | default: 0 }}px;
          padding-bottom: {{ block.settings.padding_bottom | times: 0.75 | round: 0 | default: 0 }}px;
          padding-left: {{ block.settings.padding_left | times: 0.75 | round: 0 | default: 0 }}px;
          padding-right: {{ block.settings.padding_right | times: 0.75 | round: 0 | default: 0 }}px;
          border-top-left-radius: {{ block.settings.border_radius_top_left | default: 0 }}px;
          border-top-right-radius: {{ block.settings.border_radius_top_right | default: 0 }}px;
          border-bottom-left-radius: {{ block.settings.border_radius_bottom_left | default: 0 }}px;
          border-bottom-right-radius: {{ block.settings.border_radius_bottom_right | default: 0 }}px;
          background-color: {{ block.settings.background_color | default: '#f4f4f4' }};
          opacity: {{ block.settings.background_opacity | default: 100 }}%;
      }

      @media screen and (min-width: 750px) {

        .block-{{ block.id }} {
          padding-top: {{ block.settings.padding_top | default: 0 }}px;
          padding-bottom: {{ block.settings.padding_bottom | default: 0 }}px;
          padding-left: {{ block.settings.padding_left | default: 0 }}px;
          padding-right: {{ block.settings.padding_right | default: 0 }}px;
        }
      }
    {%- endfor -%}

{%- endstyle -%}


<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">

  {% if section.settings.show_search_bar_in_collection_page %}
    <div class="collection-search-bar-and-filter page-width">
      <!-- Search Bar Start -->
      {% comment %} {% paginate search.results by 24 %} {% endcomment %}
        {% render 'custom-search-bar', input_id: 'Search-Bar-In-Collection-Page', class: 'custom-search-bar custom-search-bar-collection' %}
      {% comment %} {% endpaginate %} {% endcomment %}
      <!-- Search Bar End -->
      
      <!-- Filter Start works good in mobile and horizontal layout only -->
        {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
  
          <button class="filter-button-mobile {% if collection.products.size == 0 %} hidden {% endif %}">
            <span class="svg-wrapper">
              {% render 'icon-filter-figma' %}
            </span>
          </button>
        {%- endif -%}
      <!-- Filter End -->
    </div>   
  {% endif %}

  {%- paginate collection.products by section.settings.products_per_page -%}
    <div class="sorting-and-product-grid-container">

      <!-- Collection Page Left Column -->
      <div class="{% if section.settings.filter_type == 'vertical' %} facets-vertical page-width{% endif %}">
        {{ 'component-facets.css' | asset_url | stylesheet_tag }}
        <script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>

        {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
          <aside
            aria-labelledby="verticalTitle"
            class="facets-wrapper{% unless section.settings.enable_filtering %} facets-wrapper--no-filters{% endunless %}{% if section.settings.filter_type != 'vertical' %} page-width{% endif %} {% if collection.products.size == 0 %} hidden {% endif %}"
            id="main-collection-filters"
            data-id="desktop-{{ section.id }}"
          >
            {% render 'facets',
              results: collection,
              enable_filtering: section.settings.enable_filtering,
              enable_sorting: section.settings.enable_sorting,
              filter_type: section.settings.filter_type,
              paginate: paginate,
              enable_sticky_sorting: section.settings.enable_sticky_sorting
            %}
          </aside>
        {%- endif -%}

        <!-- Collection Page Right Column -->
        <div class="collection_page-right-col">

          <!-- Collection Banner/Hero -->
          {% for block in section.blocks %}
            <div class="collection-info-block block-{{ block.id }}">
              {% if block.type == 'collection_info' %}
  
                <h1 class="collection-info-block__title">
                  <span class="visually-hidden">{{ 'sections.collection_template.title' | t }}: </span>
                  {{- collection.title | escape -}}
                </h1>
                <div class="collection-info-block__description">
                  
                  {% render 'show-more-text-content',
                    item_description: block.settings.collection_description,
                    show_more_type: block.settings.show_more_type,
                    show_more_text: block.settings.show_more_text, ,
                    show_less_text: block.settings.show_less_text,
                    description_limit: block.settings.description_limit 
                  %}
                </div>
              {% endif %}
            </div>
          {% endfor %}


          <!-- Mobile View: Product Count and Filter Button -->
          <div class="filter-button-container {% if collection.products.size == 0 %} hidden {% endif %}">
            {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}

              <!-- Product Count for Mobile besides Filter Button -->
              <span class="results-product-count filter-results-product-count">
                {%- if collection.results_count -%}
                  {{
                    'templates.search.results_with_count'
                    | t: terms: collection.terms, count: collection.results_count
                  }}
                {%- elsif collection.products_count == collection.all_products_count -%}
                  {{ 'products.facets.product_count_simple' | t: count: collection.products_count }}
                {%- else -%}
                  {{
                    'products.facets.product_count_simple'
                    | t: count: collection.products_count
                  }}
                {%- endif -%}
                {%- render 'loading-spinner' -%}
              </span>
              

              <button class="filter-button-mobile-no-search-bar filter-button-mobile-no-search-bar--button">
                <span> {{ 'products.facets.filter_button' | t }} </span>
              </button>
            {%- endif -%}
          </div>  
     

          <!-- Desktop View: Product Count and Filters Side Bar -->
          {%- if section.settings.enable_sorting and section.settings.filter_type == 'vertical' -%}
            <facet-filters-form class="facets facets-vertical-sort small-hide {% if collection.products.size == 0 %} hidden {% endif %}">
              <form class="facets-vertical-form" id="FacetSortForm">

                <!-- Product Count Desktop for Collection -->
                <div class="product-count-vertical light" role="status">
                  <h2 class="product-count__text text-body">
                    <span class="filter-results-product-count results-product-count">
                      {%- if collection.results_count -%}
                        {{
                          'templates.search.results_with_count'
                          | t: terms: collection.terms, count: collection.results_count
                        }}
                      {%- elsif collection.products_count == collection.all_products_count -%}
                        {{ 'products.facets.product_count_simple' | t: count: collection.products_count }}
                      {%- else -%}
                        {{
                          'products.facets.product_count_simple'
                          | t: count: collection.products_count
                        }}
                      {%- endif -%}
                      {%- render 'loading-spinner' -%}
                    </span>
                  </h2>
                </div>
                <!-- Sorting Option on Desktop -->
                <div class="facet-filters sorting caption">
                  <div class="facet-filters__field">
                    <h2 class="facet-filters__label caption-large text-body">
                      <label for="SortBy">{{ 'products.facets.sort_by_label' | t }}</label>
                    </h2>
                    <div class="select">
                      {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
                      <select
                        name="sort_by"
                        class="facet-filters__sort select__select caption-large"
                        id="SortBy"
                        aria-describedby="a11y-refresh-page-message"
                      >
                        {%- for option in collection.sort_options -%}
                          <option
                            value="{{ option.value | escape }}"
                            {% if option.value == sort_by %}
                              selected="selected"
                            {% endif %}
                          >
                            {{ option.name | escape }}
                          </option>
                        {%- endfor -%}
                      </select>
                      <span class="svg-wrapper">
                        {{- 'icon-caret.svg' | inline_asset_content -}}
                      </span>
                    </div>
                  </div>
                </div>
              </form>
            </facet-filters-form>
          {%- endif -%}
          
          <!-- Product Cards UI -->
          <div
            class="product-grid-container{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            id="ProductGridContainer"
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
            {% endif %}
          >
            <!-- When the Collection has No Products -->
            {%- if collection.products.size == 0 -%}
              <div class="collection collection--empty page-width" id="product-grid" data-id="{{ section.id }}">
                <div class="loading-overlay gradient"></div>
                <div class="title-wrapper center">
                  <h2 class="title title--primary h4">
                    {{ 'sections.collection_template.empty' | t -}}
                    <br>
                    {{
                      'sections.collection_template.use_fewer_filters_html'
                      | t: link: collection.url, class: 'underlined-link link'
                    }}
                  </h2>
                </div>
              </div>
            {%- else -%}
              <div
                class="collection{% if section.settings.filter_type != 'vertical' %} page-width{% endif %}"
              >
                <div class="loading-overlay gradient"></div>
                <ul
                  id="product-grid"
                  data-id="{{ section.id }}"
                  class="
                    grid product-grid grid--{{ section.settings.columns_mobile }}-col-tablet-down
                    grid--{{ section.settings.columns_desktop }}-col-desktop
                    {% if section.settings.quick_add == 'bulk' %} collection-quick-add-bulk{% endif %}
                  "
                >
                  {% assign skip_card_product_styles = false %}
                  {%- for product in collection.products -%}
                    {% assign lazy_load = false %}
                    {%- if forloop.index > 2 -%}
                      {%- assign lazy_load = true -%}
                    {%- endif -%}
                    <li
                      class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                      {% if settings.animations_reveal_on_scroll %}
                        data-cascade
                        style="--animation-order: {{ forloop.index }};"
                      {% endif %}
                    >
                      {% render 'card-product',
                        card_product: product,
                        media_aspect_ratio: section.settings.image_ratio,
                        image_shape: section.settings.image_shape,
                        show_secondary_image: section.settings.show_secondary_image,
                        show_vendor: section.settings.show_vendor,
                        show_rating: section.settings.show_rating,
                        lazy_load: lazy_load,
                        skip_styles: skip_card_product_styles,
                        quick_add: section.settings.quick_add,
                        section_id: section.id,
                        truncate_description: section.settings.truncate_description,
                        show_product_variants: section.settings.show_product_variants,
                        show_product_stock_status: section.settings.show_product_stock_status,
                        show_strikethrough_price: section.settings.show_strikethrough_price,
                        price_horizontal_alignment: section.settings.price_horizontal_alignment,
                        price_vertical_alignment: section.settings.price_vertical_alignment,
                        price_gap: section.settings.price_gap,
                        current_price_font_weight: section.settings.current_price_font_weight,
                        original_price_size: section.settings.original_price_size,
                        show_tax_price: section.settings.show_tax_price,
                        tax_price_font_size: section.settings.tax_price_font_size,
                        tax_price_font_weight: section.settings.tax_price_font_weight
                        tax_text_font_size: section.settings.tax_text_font_size,
                        tax_text_uppercase: section.settings.tax_text_uppercase,
                        tax_price_margin_top: section.settings.tax_price_margin_top,
                        tax_price_margin_left: section.settings.tax_price_margin_left
                      %}
                    </li>
                    {%- assign skip_card_product_styles = true -%}
                  {%- endfor -%}
                </ul>
  
                {%- if paginate.pages > 1 -%}
                  {% render 'pagination', paginate: paginate, anchor: '' %}
                {%- endif -%}
              </div>
            {%- endif -%}
          </div>
          <!-- More Blocks for Collection Page -->
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'collection_info_1' %}
                <div class="collection">
                  {{ block.settings.title }}
                  {{ block.settings.description }}
                </div>
            {% endcase %}
          {% endfor %}
        </div>

      </div>
    </div>
  {%- endpaginate -%}

  {% if section.settings.image_shape == 'arch' %}
    {{ 'mask-arch.svg' | inline_asset_content }}
  {%- endif -%}

</div>

<script>

  document.addEventListener('DOMContentLoaded', function() {
    
  {% if section.settings.show_search_bar_in_collection_page %}
    const filterButton = document.querySelector('.filter-button-mobile');
  {%- else -%}
    const filterButton = document.querySelector('.filter-button-mobile-no-search-bar');
  {%- endif -%}

  const detailsElement = document.querySelector('.mobile-facets__disclosure');

  if (filterButton && detailsElement) {
    filterButton.addEventListener('click', function() {
      // Toggle the 'open' attribute
      detailsElement.toggleAttribute('open');
      
      // Add 'menu-opening' class when 'open' is toggled
      if (detailsElement.hasAttribute('open')) {
        detailsElement.classList.add('menu-opening');
      } else {
        detailsElement.classList.remove('menu-opening');
      }
    });
  }
});

</script>

